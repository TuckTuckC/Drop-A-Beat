    <div>
        <div id="newCommentTxt" class="card-header">
            What's your comment?
        </div>
        <ul class="list-group list-group-flush">
            <input type="comment" name="body" placeholder="Comment">
            <input class="btn btn-success" type="submit" value="Drop that Comment">
        </ul>
    </div>
</form>
